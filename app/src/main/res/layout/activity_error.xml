<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".errorActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eat Bacon"
        android:id="@+id/BaconButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eat Eggs"
        android:id="@+id/EggsButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/BaconButton"
        android:layout_toEndOf="@+id/BaconButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BaconText"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/EggsButton"
        android:layout_alignEnd="@+id/EggsButton" />
</RelativeLayout>
